{
    "name": "chadicus/solarium-guzzle-adapter",
    "description": "Solarium Adapter interface implemented with Guzzle 6.",
    "keywords": ["solarium", "solr", "guzzle"],
    "license": "MIT",
    "require": {
        "php": "^5.6 || ^7.0",
        "guzzlehttp/guzzle": "^6.2",
        "solarium/solarium": "^3.7"
    },
    "autoload": {
        "psr-4": {"Solarium\\Core\\Client\\Adapter\\": "src"}
    },
    "autoload-dev": {
        "psr-4": { "SolariumTest\\Core\\Client\\Adapter\\": "tests"}
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "chadicus/coding-standard": "^1.2",
        "satooshi/php-coveralls": "^1.0"
    }
}
